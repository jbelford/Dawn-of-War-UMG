<rxui:ReactiveUserControl
            x:Class="DowUmg.Presentation.WPF.Controls.GeneralTabControl"
            x:TypeArguments="vm:GeneralTabViewModel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:rxui="http://reactiveui.net"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:vm="clr-namespace:DowUmg.Presentation.ViewModels;assembly=DowUmg.Presentation"
            xmlns:controls="clr-namespace:DowUmg.Presentation.WPF.Controls"
            mc:Ignorable="d"
            d:DesignHeight="404.256" d:DesignWidth="733.07">
    <UserControl.Resources>
        <DataTemplate x:Key="MinMaxTemplate" DataType="{x:Type vm:RangeViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" MinWidth="5" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Min" />
                <ContentControl Grid.Row="2" Grid.Column="0" Content="{Binding MinInput}"
                    ContentTemplate="{StaticResource OptionInputTemplate}" />
                <Label Grid.Row="0" Grid.Column="2" Content="Max" />
                <ContentControl Grid.Row="2" Grid.Column="2" Content="{Binding MaxInput}"
                    ContentTemplate="{StaticResource OptionInputTemplate}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="PlayersTemplate" DataType="{x:Type vm:PlayersSelectViewModel}">
            <GroupBox Padding="10,5">
                <GroupBox.Header>
                    <Label Content="{Binding Label, Mode=OneTime}" />
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" MinWidth="5" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" MinWidth="5" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Humans</Label>
                    <ContentControl Grid.Row="1" Grid.Column="0" Content="{Binding Humans, Mode=OneTime}"
                            ContentTemplate="{StaticResource OptionInputTemplate}" />
                    <ContentControl Grid.Column="2" Grid.RowSpan="2" Grid.Row="0" Content="{Binding MinMax, Mode=OneTime}"
                        ContentTemplate="{StaticResource MinMaxTemplate}" />
                    <Button Grid.Column="4" Grid.Row="1" Content="Races" />
                </Grid>
            </GroupBox>
        </DataTemplate>

        <DataTemplate x:Key="ToggleItemListTemplate" DataType="{x:Type vm:ToggleItemListViewModel}">
            <GroupBox>
                <GroupBox.Header>
                    <Label FontStyle="Italic" Content="{Binding Path=Label, Mode=OneTime}" />
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer>
                        <ItemsControl Grid.Row="0" ItemsSource="{Binding Path=Items, Mode=OneTime}" ItemTemplate="{StaticResource ToggleItemTemplate}">
                            <ItemsControl.ItemContainerStyle>
                                <Style>
                                    <Setter Property="FrameworkElement.Margin" Value="5" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </ScrollViewer>
                    <Button Grid.Row="2" Content="Toggle All" Command="{Binding Path=ToggleItems}" />
                </Grid>
            </GroupBox>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <ContentControl x:Name="GlobalPlayerOptions" ContentTemplate="{StaticResource PlayersTemplate}" />
                <GroupBox Padding="10">
                    <GroupBox.Header>
                        <Label>Teams</Label>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" MinWidth="10" />
                            <ColumnDefinition Width="Auto" MinWidth="50" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" MinHeight="5" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="EvenRadio" Grid.Row="0" GroupName="distgrp">Even Distribution</RadioButton>
                            <RadioButton Grid.Row="2" GroupName="distgrp">Random Distribution</RadioButton>
                        </Grid>
                        <Label Content="Num" Grid.Column="2" Grid.Row="0" />
                        <ContentControl x:Name="TeamNum" Grid.Column="2" Grid.Row="1"
                            ContentTemplate="{StaticResource OptionInputTemplate}" />
                    </Grid>
                </GroupBox>
            </StackPanel>

            <WrapPanel Grid.Row="0" Grid.Column="2">
                <WrapPanel.Resources>
                    <Style TargetType="GroupBox">
                        <Setter Property="Padding" Value="5,0,5,5" />
                        <Setter Property="Margin" Value="0,0,10,10" />
                        <Setter Property="Height" Value="250" />
                    </Style>
                </WrapPanel.Resources>
                <GroupBox>
                    <GroupBox.Header>
                        <Label FontStyle="Italic">Maps</Label>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Type" />
                            <ItemsControl x:Name="MapTypes" ItemTemplate="{StaticResource ToggleItemTemplate}">
                                <ItemsControl.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="FrameworkElement.Margin" Value="5" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Size" />
                            <ItemsControl x:Name="MapSizes" ItemTemplate="{StaticResource ToggleItemTemplate}">
                                <ItemsControl.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="FrameworkElement.Margin" Value="5" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <ContentControl x:Name="Maps"
                        ContentTemplate="{StaticResource ToggleItemListTemplate}" />
                <ContentControl x:Name="WinConditions"
                        ContentTemplate="{StaticResource ToggleItemListTemplate}" />
            </WrapPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" HorizontalContentAlignment="Center" Content="Customize Team Composition" />
            <Separator Grid.Row="1" />
        </Grid>

        <ItemsControl Grid.Row="2" x:Name="Teams" Margin="10" ItemTemplate="{StaticResource PlayersTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</rxui:ReactiveUserControl>
